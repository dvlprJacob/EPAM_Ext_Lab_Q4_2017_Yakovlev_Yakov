@model IEnumerable<PB.PL.Models.Lists.ArticleListVM>

@{
    Layout = null;
}

@Styles.Render("~/Content/css")
@if (Model != null)
{
    <div class="col-lg-12">
        <div>
            @foreach (var item in Model)
                {
                <span style="padding-top:6px; padding-left:5px; padding-right:5px; padding-bottom : 5px;">
                    @Html.RouteLink(item.Title, new { controller = "Article", action = "Index", id = item.ArticleID })
                </span>
            }
        </div>
    </div>
}
@Scripts.Render("~/Scripts/js")